<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/material_dynamic_primary90">


    <TextView
        android:id="@+id/tv_ArchitectureName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#303F9F"
        android:text="Architecture Name" />

    <TextView
        android:id="@+id/tv_ArchitectureArchitect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Architect"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/tv_ArchitectureLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/tv_ArchitectureYearCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year Completed"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/tv_ArchitectureStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Style"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/tv_ArchitectureHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/tv_ArchitectureDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:paddingTop="4dp" />

    <Button
        android:id="@+id/btnSeeDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"

        android:text="See Detail" />
</LinearLayout>
